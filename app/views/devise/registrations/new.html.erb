<div class="row">
  <div class="col-sm-12 col-md-4 col-md-offset-4">
    <h2>Sign up</h2>
    <div>
      <h3 class="subtext">
        <small>
          You're 30 seconds away from improving the world.
        </small>
      </h3>
    </div>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <div><%= f.label :first_name %>
            <%= f.text_field :first_name, :autofocus => true, :class => "form-control" %></div>
            <%= errors_for resource, :first_name %>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="form-group">
            <div><%= f.label :last_name %>
            <%= f.text_field :last_name, :class => "form-control" %></div>
            <%= errors_for resource, :last_name %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div><%= f.label :email %>
        <%= f.email_field :email, :class => "form-control" %></div>
        <%= errors_for resource, :email %>
      </div>

      <div class="form-group">
        <div><%= f.label :password %>
        <%= f.password_field :password, :class => "form-control" %></div>
        <%= errors_for resource, :password %>
      </div>

      <div><%= f.submit "Sign up", :class => "btn btn-success" %></div>
    <% end %>

    <div class="devise-shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>